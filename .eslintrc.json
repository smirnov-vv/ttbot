{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-underscore-dangle": [2, { "allow": ["__filename", "__dirname"] }],
        "import/extensions": [ // FIXME: remove when rule will be adjusted for new nodejs version
            2,
            "ignorePackages",
            {
                "js": "always"
            }
        ] 
    }
}
